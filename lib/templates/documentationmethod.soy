{namespace zz.ide.templates.documentationmethod}

/**
 * @param key
 * @param value
 */
{template .default}
    <div
        class="{css documentation-method} {css documentation-child}"
        data-class="{$key.open}:{css documentation-method_open}"
        data-name="{$value.name}">
        <div
            class="{css documentation-method--title-wrapper}"
            data-action>
            <div
                class="{css documentation-method--title}">
                <span
                    class="{css documentation-method--title-this}">
                    this.
                </span>
                <span
                    class="{css documentation-method--title-name}"
                    data-model="{$key.name}">
                    {$value.name}
                </span>
                <span
                    class="{css documentation-method--title-bracket}">
                    ({sp}
                </span>
                {if $value.params.length}
                    <span
                        class="{css documentation-method--title-params}">
                        {foreach $param in $value.params}
                            {if isFirst($param)}
                                  {$param.name}
                            {/if}
                            {if not isFirst($param)}
                               ,{sp}{$param.name}
                            {/if}
                            {ifempty}
                        {/foreach}
                        {sp}
                    </span>
                {/if}
                <span
                    class="{css documentation-method--title-bracket}">
                    )
                </span>
                <span
                    class="{css documentation-method--title-return}">
                    &#10230;(
                    {if $value.return.length}
                        {foreach $item in $value.return}
                            {if isFirst($item)}
                                {if $item.link}
                                   <a
                                       href="{$item.link}"
                                       target="_blank">
                                       {$item.name}
                                   </a>
                                {else}
                                   {$item.name}
                                 {/if}
                            {/if}
                            {if not isFirst($item)}
                               |
                               {if $item.link}
                                  <a
                                      href="{$item.link}"
                                      target="_blank">
                                      {$item.name}
                                  </a>
                               {else}
                                  {$item.name}
                               {/if}
                            {/if}
                            {ifempty}
                        {/foreach}
                    {else}
                        void
                    {/if}
                    )
                </span>
            </div>
            <div
                class="{css documentation-method--title-arrow}">
                <i
                    class="{css material-icons}">
                    keyboard_arrow_down
                </i>
            </div>
        </div>
        <div
            class="{css documentation-method--details}">
            <div
                class="{css documentation-method--memberof}">
                <span>
                    Defined in:{sp}
                </span>
                <span
                    class="{css memberof}">
                    {$value.memberof}
                </span>
            </div>
            {if $value.description}
                <div
                    class="{css documentation-method--description}">
                    {$value.description}
                </div>
            {/if}
            <div
                class="{css documentation-method--params-block}">
                {if $value.params.length}
                    <div
                        class="{css documentation-method--params-block-name}">
                        Parameters
                    </div>
                {/if}
                <div
                    class="{css documentation-method--params-wrapper}"
                    data-model="{$key.params}"
                    data-view="documentationParams"
                    data-controller="documentationParams">
                </div>
            </div>
        </div>
    </div>
{/template}